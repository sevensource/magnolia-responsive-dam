  <dependencies>
    <dependency>
      <name>core</name>
      <version>5.5.4/*</version>
    </dependency>
    
    <dependency>
    	<name>dam-app</name>
    	<version>2.2.6/*</version>
    </dependency>
    
    <dependency>
      <name>rendering</name>
      <version>5.4/*</version>
    </dependency>
    
    <dependency>
    	<name>imaging</name>
    	<version>3.4/*</version>
