<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
  <name>responsive-dam</name>
  <displayName>Responsive DAM</displayName>
  <description>${project.description}</description>
  <class>org.sevensource.magnolia.responsivedam.ResponsiveDamModule</class>
  <version>${project.version}</version>
  
  <components>
    <id>main</id>
    <component>
      <type>org.sevensource.magnolia.responsivedam.templating.ResponsiveDamTemplatingFunctions</type>
      <implementation>org.sevensource.magnolia.responsivedam.templating.ResponsiveDamTemplatingFunctions</implementation>
      <scope>singleton</scope>
    </component>
    
    <component>
      <type>org.sevensource.magnolia.responsivedam.configuration.ResponsiveDamConfiguration</type>
      <implementation>org.sevensource.magnolia.responsivedam.configuration.ResponsiveDamConfiguration</implementation>
